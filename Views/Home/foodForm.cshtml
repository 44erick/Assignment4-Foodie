@{
    ViewBag.Title = "Restaurant Form";
}

@model Foodie.Models.modelResponse
    <div class="text-center">
        <div class="column"></div>
        <div class="column">
            <!-- Form-->
            <form class="form-group" asp-action="foodForm" method="post">
                <div>
                    <label class="col-form-label" asp-for="Name">Name:</label>
                    <input class="input-group" asp-for="Name" />
                </div>

                <div>
                    <label class="col-form-label" asp-for="Restaurant">Restaurant Name:</label>
                    <input class="input-group" asp-for="Restaurant" />
                </div>

                <div>
                    <label class="col-form-label" asp-for="Favorite">Favorite Dish:</label>
                    <input class="input-group" asp-for="Favorite" />
                </div>

                <div>
                    <label class="col-form-label" asp-for="Phone">Restaurant Phone #:</label>
                    <input class="input-group" type="tel" asp-for="Phone" />
                </div>
                <button class="btn-light" type="submit">Enter Favorite Restaurant</button>
            </form>

            <!-- This bottom part will show our validator messages.-->
            <div asp-validation-summary="All"></div>
        </div>
        <div class="column"></div>
    </div> 